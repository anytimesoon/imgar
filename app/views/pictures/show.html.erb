<h1><%= @picture.title %></h1>

<%= link_to (image_tag @picture.path.url(:medium)), asset_path(@picture.path.url) %>

<h2>Tags</h2>
<% @picture.tags.each do |tag| %>
	<%= link_to tag.name, tag_path(tag) %>			
<% end %>

<h3>Add a comment</h3>
<%= render 'comments/form', :locals => { comment: @comment} %>

<h3>Comments</h3>

<% @picture.comments.each do |comment| %>
	<div>
		<p>
			<%= comment.user.name %> says:
		</p>
		<p>
			<%= comment.content %>
		</p>
	</div>
<% end %>