<h1><%= @picture.title %></h1>

<%= link_to (image_tag @picture.path.url(:medium)), asset_path(@picture.path.url) %>

<div>
	<h2>Tags</h2>
	<% @picture.tags.each do |tag| %>
		<%= link_to tag.name, tag_path(tag) %>			
	<% end %>
</div>

<div>
	<%= render 'ratings/show' %>
</div>

<div>
	<div>
		<h3><%= render 'comment_header' %></h3>
		<%= render 'comments/form' if current_user %>
	</div>

	<div>
		<h3>Comments</h3>
		<%= render 'comments/show' %>
	</div>
</div>